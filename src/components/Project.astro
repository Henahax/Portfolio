---
interface Props {
  title: string;
  subtitle?: string;
  type: string;
  href: string;
}
const { title, subtitle, type, href } = Astro.props;
---

<li class="project">
  <a href={href} class="flex flex-col gap-4 w-full p-5">
    <div class="flex flex-col gap-1">
      <div class="inline-flex justify-between">
        <h3>{title}</h3>
        <span class="text-sm italic text-neutral-400">{type}</span>
      </div>
      <h4 class="text-sm text-neutral-400">{subtitle}</h4>
    </div>
    <div class="flex flex-col">
      <p class="h-full text-sm">
        <slot name="text" />
      </p>
      <p class="h-full text-xs text-neutral-400">
        <slot name="subtext" />
      </p>
    </div>
    <div class="flex flex-row gap-1">
      <slot name="technologies" />
    </div>
  </a>
</li>
<style>
  .project {
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .project > a {
    line-height: 1.4;
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  .project:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .project:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
</style>
