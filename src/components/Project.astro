---
interface Props {
  name: string;
  link: string;
  type?: string;
  description: string;
}

const { name, link, type, description } = Astro.props;
---

<a class="border rounded-lg p-4 bg-neutral-500 flex flex-col gap-2" href={link}>
  <div class="flex flex-row justify-between">
    <h3 class="text-xl">{name}</h3>
    <span class="text-sm">{type}</span>
  </div>

  <p>{description}</p>
  <div class="flex flex-row gap-1">
    <slot name="technologies" />
  </div>
</a>
