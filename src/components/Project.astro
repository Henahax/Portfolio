---
import { Badge } from './ui/badge';

interface Props {
  name: string;
  link: string;
  type?: string;
  description: string;
  tags?: string[];
}

const { name, link, type, description, tags } = Astro.props;
---

<a class="border rounded-lg p-4 bg-neutral-900 hover:bg-neutral-800 flex flex-col gap-2" href={link}>
  <div class="flex flex-row justify-between">
    <h3 class="text-xl">{name}</h3>
    <span class="text-sm">{type}</span>
  </div>
  <p>{description}</p>
  <div class="flex flex-row flex-wrap gap-1">
    {tags?.map((tag) => <Badge title={tag}>{tag}</Badge>)}
  </div>
</a>

